<!-- adds header.ejs -->
<%- include("partials/header") %>

<h1>Sign Up</h1>
<p>Please fill in this form to create an account.</p>
<hr/>
<div>
    <form class="modal-content" action="/signup" method="post">
        <div class="container">
            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Enter Email" name="email" required>
    
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>
    
            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repeat Password" name="psw-repeat" required>
            <div>
                <label for="psw-repeat"><b>Little Bio about yourself</b></label> <br>
                <textarea name="biography" id="" cols="80" rows="5" placeholder="Short blurb about yourself"></textarea>
            </div>

            <div>
                <label for="psw-repeat"><b>Gender</b></label> <br>
            </div>

            <div>
                <label for="psw-repeat"><b>Age Range</b></label> <br>
            </div>

            <div>
                <label for="psw-repeat"><b>Location</b></label> <br>
            </div>

            <div>
                <label for="psw-repeat"><b>Interest</b></label> <br>
                <p>Check all that apply</p>
                <label>
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Animals
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Housing
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Neighborhood Cleanup
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Food/Hunger
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Community Organizing
                    <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> LGBTA+
                </label>
            </div>

            <label>
                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
            </label>
    
            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
    
            <div class="clearfix">
            <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
            <button type="submit" class="signup">Sign Up</button>
            </div>
        </div>
    </form>
</div>

